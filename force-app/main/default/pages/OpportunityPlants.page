<center>
<apex:outputfield value="{!dd.Fri__c}"/>
</center>
</apex:column>
<apex:column >
<apex:facet name="header">&nbsp; Ship &nbsp;</apex:facet>
<center>
<apex:outputfield value="{!dd.Ship__c}"/>
</center>
</apex:column>
</apex:datatable>  
</apex:page>
<apex:outputtext value="{!dd.Account__r.name}"/>
</apex:column>
<apex:column >
<apex:facet name="header">&nbsp; Plant Number &nbsp; </apex:facet>
<center>
<apex:outputfield value="{!dd.Account__r.site}"/>
